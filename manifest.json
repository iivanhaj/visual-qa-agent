{
    "manifest_version": 3,
    "name": "Visual QA Agent - Advanced Bug Detector",
    "version": "2.0.0",
    "description": "Comprehensive web bug detection with SEO, accessibility, performance, and security testing. Export actionable design docs for engineers and AI tools.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "downloads",
        "sidePanel"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_title": "Visual QA Agent"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.ts"
            ]
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+T"
            },
            "description": "Open Visual QA Agent Sidebar"
        }
    },
    "icons": {
        "16": "public/vite.svg",
        "48": "public/vite.svg",
        "128": "public/vite.svg"
    }
}